	<script>
        var socket = io.connect('http://192.168.99.112:8081');
	// Reception message du serveur
	socket.on('message', function (reception) {
	var wrapper = document.getElementById('wrapper');
	var p = document.createElement('p');
	var textNode = document.createTextNode("Message de " + reception.from + ": " + reception.message);
	p.appendChild(textNode);
	wrapper.appendChild(p);
	}); 
        
	// Envoi message au serveur
        $("#formulaire").click(function() {
	var pseudo = $("#pseudo").val();
	var message = $("#message").val();
	var envoi = {
	'from' : pseudo,
	'message' : message
	}
	socket.emit('message', envoi);
	});
     
        </script>
